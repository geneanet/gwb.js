{%- include 'utils.jingoo' -%}

{%- macro print_event (event) -%}
  {%- if event.date -%}<span>{{ DATE.string_of_ondate (event.date) }}{{ ':' | trans }}</span>
  {%- else -%}<span><i>--- :<i></span>
  {%- endif -%}
  <span>
    {{ event.name | capitalize }}
    {%- if event.spouse -%}({{ 'with' | trans }} {{ event.spouse }}){%- endif -%}
    {%- if event.place %} - {{ event.place }} {%- endif -%}
  </span>
  {%- if event.note -%}<div>{{ event.note }}</div>{%- endif -%}
  {%- if event.witnesses -%}
    <p>
      {%- for w in event.witnesses -%};
        <span>{{ w.kind | capitalize }}{{ ':' | trans }}</span>{{ short_display_person (w) }}<br/>
      {%- endfor -%}
    </p>
  {%- endif -%}
  {%- if event.src -%}
    {%- if not event.witnesses -%}<br/>{%- endif -%}
    <span>{{  'source/sources' | trans_nth (1) | capitalize }}{{ ':' | trans }} {{ event.src }}</span>
  {%- endif -%}
{%- endmacro -%}

{%- if ind.events -%}
  <section>
    <article>
      <h2>{{ 'time line' | trans | capitalize }}</h2>
      <ul>
        {%- for e in ind.events | sort (attribute="date") -%}
          <li>{{ print_event (e) }}</li>
        {%- endfor -%}
      </ul>
    </article>
  </section>
{%- else -%}
  <section><p>No events.</p></section>
{%- endif -%}
